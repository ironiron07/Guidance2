<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.raeven.guidance.AppointmentFragment"
    android:id="@+id/appointmentFrag">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/hLinearAppointment">

            <Button
                android:layout_width="38dp"
                android:layout_height="37dp"
                android:id="@+id/btnBack"
                android:background="?attr/actionModeCloseDrawable"
                android:maxHeight="48dp"
                android:maxWidth="48dp"
                android:minWidth="48dp" />

            <TextView
                android:text="{Student name}"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/lblAppointmentWith"
                android:layout_weight="1"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textIsSelectable="false"
                android:textSize="24sp" />

        </LinearLayout>

        <TextView
            android:text="How the counselor may be of help:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lblAnswer1"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/textView12"
            android:layout_margin="5dp" />

        <TextView
            android:text="Current concern:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lblCurrentConcern"
            android:layout_below="@+id/hLinearAppointment"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_margin="5dp" />

        <TextView
            android:text="Academic Performance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lblAnswer1"
            android:layout_below="@+id/lblCurrentConcern"
            android:layout_centerHorizontal="true"
            android:layout_margin="5dp"
            android:background="@drawable/border"
            android:gravity="center"/>

        <TextView
            android:text="Some text here"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lblHelp"
            android:layout_below="@+id/textView12"
            android:layout_centerHorizontal="true"
            android:layout_margin="5dp"
            android:background="@drawable/border"
            android:gravity="center"/>

        <TextView
            android:text="Elaboration:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lblHelp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/textView14"
            android:layout_margin="5dp" />

        <TextView
            android:text="A little elaboration of the problem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView14"
            android:layout_centerHorizontal="true"
            android:id="@+id/textView15"
            android:layout_margin="5dp"
            android:background="@drawable/border"
            android:gravity="center"/>

        <TextView
            android:text="Student's preferred time:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView15"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/lblProblem"
            android:layout_margin="5dp"
            android:gravity=""/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:ems="10"
            android:id="@+id/txtPrefDate"
            android:layout_below="@+id/lblProblem"
            android:layout_centerHorizontal="true"
            android:layout_margin="5dp"
            android:autoText="false"
            android:enabled="false"
            android:editable="true"
            android:background="@drawable/border"
            android:gravity="center"/>

        <TextView
            android:text="Set appointment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtPrefDate"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/textView33"
            android:layout_margin="5dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:ems="10"
            android:id="@+id/txtSetAppoinment"
            android:layout_below="@+id/textView33"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@drawable/border"/>

        <Button
            android:text="Open Chat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnOpenChat"
            android:layout_below="@+id/txtSetAppoinment"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_margin="5dp" />

        <Button
            android:text="Set Appointment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnSetAppointment"
            android:layout_below="@+id/btnOpenChat"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_margin="5dp" />

    </RelativeLayout>
</FrameLayout>
