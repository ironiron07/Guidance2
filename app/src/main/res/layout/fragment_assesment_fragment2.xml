<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.raeven.guidance.AssessmentFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:text="Question 2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView17"
        android:layout_marginTop="47dp"
        android:id="@+id/textView18"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="How the counselor may be of help?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView18"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="48dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="17dp"
        android:id="@+id/textView19"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />



    <Button
        android:text="Next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="39dp"
        android:layout_marginEnd="39dp"
        android:id="@+id/q2next"
        android:layout_weight="1"
        android:layout_marginBottom="31dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/q2Answer"/>

    <TextView
        android:text="Lance Albert M. Morales"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:id="@+id/textView17"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="350dp"
        android:layout_height="200dp"
        android:inputType="textMultiLine"
        android:gravity="top"
        android:ems="10"
        android:layout_marginTop="17dp"
        android:id="@+id/q2Answer"
        android:layout_below="@+id/textView19"
        android:layout_centerHorizontal="true"
        android:background="@drawable/border"/>

</RelativeLayout>
